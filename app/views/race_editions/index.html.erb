<div class="container">
  <h2>Ediciones de carreras guardadas</h2>
  <div class="row">
    <div class="col col s8 offset-s2">
    	<table class="highlight centered responsive-table">
			<thead>
        		<tr>
            		<th>Id</th>
            		<th>Nombre</th>
            		<th>Km</th>
            		<th>Fecha</th>
            		<th>Lugar</th>
            		<th>Ruta</th>
            		<th># Kits</th>
                    <th>X</th>
        		</tr>
    		</thead>
    		<tbody>		
				<% @race_editions.each do |r| %>
					<tr>
						<td><%= r.race_name %></td>
						<td><%= r.no_kilometers %></td>
						<td><%= r.race_date %></td>
						<td><%= r.race_address %></td>
						<td><%= r.route.name %></td>
						<td><%= r.no_of_running_kits %></td>
						<td><%= link_to 'Eliminar',  { action: :destroy, id: r.id }, method: :delete, data: { confirm: 'Â¿Estas seguro?\n Borraras la carrera permanentemente.' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>		
    </div>
  </div>
</div>		