<div class="container">
<h2>Registrarse</h2>
  <div class="row">
    <div class="col col s8 offset-s2">
    	<div class="progress">
          <div class="determinate" style="width: 70%"></div>
      	</div>
      	<h6 align="right">Paso 2 de 3</h6>
      	</br>
		<%= form_for :runner, url:{:action => 'create'} do |r| %>
			<%= r.label :full_name %></br>
			<%= r.text_field :full_name%></br> 
			<%= r.label :birthday %></br>
			<%= r.text_field :birthday%></br>
			<%= r.label :gender%></br>
			<%= r.text_field :gender%></br> 
			<%= r.label :address %></br> 
			<%= r.text_field :address%></br> 
			<%= r.label :city_of_birth %></br>
			<%= r.text_field :city_of_birth%></br>
			<%= r.label :state %></br>
			<%= r.text_field :state%></br>
			<%= r.label :runners_team %></br>
			<%= r.text_field :runners_team%></br>
			<%= r.label :home_number %></br>
			<%= r.text_field :home_number%></br>
			<%= r.label :mobile_number %></br>
			<%= r.text_field :mobile_number%></br>
			<%= r.label :illness_exists %></br>
			<%= r.text_field :illness_exists%></br>
			<%= r.label :illness_description %></br>
			<%= r.text_field :illness_description%></br>
			<%= r.hidden_field :user_id, value: @user %>
			<div class="col s1 offset-s8"> 
      			<div class="actions">
					<%= r.submit "Siguente paso", class:"btn-large blue"%>      
				</div>
			</div>				
		<% end %>
	</div>
  </div>
</div>  		