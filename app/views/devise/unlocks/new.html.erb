<div class="container">
<h2>Enviar instrucciones de desbloqueo</h2>
	<div class="row">
    	<div class="col col s8 offset-s2">
			<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  			<%= devise_error_messages! %>

  			<div class="field">
    			<%= f.label :email, "Correo electronico" %><br />
    			<%= f.email_field :email, autofocus: true %>
  			</div>

  			<div class="col s1 offset-s8">
  				<div class="actions">
    				<%= f.submit "Enviar instrucciones", class:"btn" %>
  				</div>
  			</div>	
			<% end %>
		</div>
	</div>
<%= render "devise/shared/links" %>
</div>