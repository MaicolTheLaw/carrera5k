<div class="container">
<h2>Ingresar</h2>
  <div class="row">
      <div class="col col s8 offset-s2">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "Correo electronico" %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password, "ContraseÃ±a" %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Recordarme" %>
            </div>
          <% end -%>

          <div class="col s1 offset-s8">
            <div class="actions">
              <%= f.submit "Ingresar", class:"btn" %>
            </div>
          </div>  
        <% end %>
    </div>
  </div>

<%= render "devise/shared/links" %>
</div>