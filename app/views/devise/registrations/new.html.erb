<div class="container">
<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col s8 offset-s2">
      <div class="field">
        <%= f.label :email, "Correo electronico" %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, "ContraseÃ±a" %>
        <!--<%   @validatable %>-->
        <%= f.password_field :password, autocomplete: "off" %>
        <center>
        <label><%= @minimum_password_length %> caracteres minimo </label>
        </center>
        <br />
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmar contraseÃ±a" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <%= f.hidden_field :user_type, value: "1" %>
    </div>   

    <div class="col s1 offset-s8"> 
      <div class="actions">
        <%= f.submit "Siguiente paso", class:"btn-large blue" %>
      </div>
    </div>
  </div>    
<% end %>

<!--<%= render "devise/shared/links" %>-->

</div>
